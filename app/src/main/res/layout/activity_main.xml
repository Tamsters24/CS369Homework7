<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:padding="5dp" android:orientation="vertical">

    <EditText
            android:id="@+id/calculator_display"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/result_screen"
            android:textSize="40pt"
            android:gravity="end|center_vertical"
            android:text="0"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:id="@+id/clear_button"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/operator_buttons"
                    android:text="C"
                    android:textColor="@color/white"/>
            <Button
                    android:id="@+id/percent_button"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/operator_buttons"
                    android:text="%"
                    android:textColor="@color/white"/>
            <Button
                    android:id="@+id/divide_button"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/operator_buttons"
                    android:text="/"
                    android:textColor="@color/white"/>
            <ImageButton
                    android:id="@+id/delete_button"
                    app:srcCompat="@drawable/backspace"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1.05"
                    app:backgroundTint="@color/operator_buttons"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:id="@+id/button7"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/purple_500"
                    android:text="7"
                    android:textColor="@color/white"
                    android:onClick="concatNumber"/>
            <Button
                    android:id="@+id/button8"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/purple_500"
                    android:text="8"
                    android:textColor="@color/white"
                    android:onClick="concatNumber"/>
            <Button
                    android:id="@+id/button9"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/purple_500"
                    android:text="9"
                    android:textColor="@color/white"
                    android:onClick="concatNumber"/>
            <Button
                    android:id="@+id/multiply_button"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/operator_buttons"
                    android:text="*"
                    android:textColor="@color/white"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:id="@+id/button4"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/purple_500"
                    android:text="4"
                    android:textColor="@color/white"
                    android:onClick="concatNumber"/>
            <Button
                    android:id="@+id/button5"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/purple_500"
                    android:text="5"
                    android:textColor="@color/white"
                    android:onClick="concatNumber"/>
            <Button
                    android:id="@+id/button6"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/purple_500"
                    android:text="6"
                    android:textColor="@color/white"
                    android:onClick="concatNumber"/>
            <Button
                    android:id="@+id/subtract_button"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/operator_buttons"
                    android:text="-"
                    android:textColor="@color/white"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:id="@+id/button1"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/purple_500"
                    android:text="1"
                    android:textColor="@color/white"
                    android:onClick="concatNumber"/>
            <Button
                    android:id="@+id/button2"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/purple_500"
                    android:text="2"
                    android:textColor="@color/white"
                    android:onClick="concatNumber"/>
            <Button
                    android:id="@+id/button3"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/purple_500"
                    android:text="3"
                    android:textColor="@color/white"
                    android:onClick="concatNumber"/>
            <Button
                    android:id="@+id/addition_button"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/operator_buttons"
                    android:text="+"
                    android:textColor="@color/white"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:id="@+id/pos_neg_button"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/purple_500"
                    android:text="+/-"
                    android:textColor="@color/white"
                    android:onClick="concatNumber"/>
            <Button
                    android:id="@+id/button0"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/purple_500"
                    android:text="0"
                    android:textColor="@color/white"
                    android:onClick="concatNumber"/>
            <Button
                    android:id="@+id/decimal_button"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/purple_500"
                    android:text="."
                    android:textColor="@color/white"
                    android:onClick="concatNumber"/>
            <Button
                    android:id="@+id/equals_button"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    app:backgroundTint="@color/operator_buttons"
                    android:text="="
                    android:textColor="@color/white"/>
        </TableRow>
    </TableLayout>
</LinearLayout>